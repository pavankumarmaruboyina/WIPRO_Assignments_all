spring.application.name=classroom-service
server.port=3333
#properties - eureka-client
eureka.client.register-with-eureka=true
eureka.client.fetch-registry=true		
eureka.client.service-url.defaultZone=http://localhost:8761/eureka/
eureka.instance.hostname=localhost
			
spring.datasource.url=jdbc:postgresql://localhost:5432/classroom-service-db
spring.datasource.username=postgres
spring.datasource.password=12345
spring.datasource.driverClassName=org.postgresql.Driver
spring.jpa.show-sql=true
spring.jpa.format-sql=true
spring.jpa.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.hibernate.ddl-auto=update


#kafka 
spring.kafka.producer.key-serializer = org.apache.kafka.common.serialization.LongSerializer
spring.kafka.producer.value-serializer = org.springframework.kafka.support.serializer.JsonSerializer

spring.output.ansi.enabled= always


spring.kafka.producer.properties.spring.json.trusted.packages="com.example.orderservice.model.Order"

spring.kafka.producer.properties.spring.json.type.mapping=order:com.example.orderservice.model.Order


spring.kafka.producer.properties.spring.json.add.type.headers=false