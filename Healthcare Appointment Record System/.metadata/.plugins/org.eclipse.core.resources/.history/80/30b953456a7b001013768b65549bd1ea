package com.example.appointment_service.feign;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PathVariable;

@FeignClient(name = "doctor-service", url = "http://localhost:8082") // Change URL to your Doctor Service address
public interface DoctorFeignClient {

    @PostMapping("/doctors/slots/{slotId}/lock")
    ResponseEntity<Void> lockSlot(@PathVariable("slotId") String slotId);
}
